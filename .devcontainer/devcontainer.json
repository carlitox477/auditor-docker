{
  // For format details, see https://aka.ms/devcontainer.json.
  "name": "project-name", // Change this to the name of your project/container to isolated from other containers.

  // You can use image or directly use a Dockerfile or Docker Compose file.
  // More info: https://containers.dev/guide/dockerfile
  // https://github.com/devcontainers/images/tree/main/src/base-alpine
  "image": "auditor-toolbox", // Image to use
  
  // Features to add to the dev container. More info: https://containers.dev/features.
  "features": {
  },

// Configure tool-specific properties.
  "customizations": {
  // Configure properties specific to VS Code.
    "vscode": {
      "extensions": [
        "NomicFoundation.hardhat-solidity",
        "tintinweb.solidity-visual-auditor",
        "tintinweb.solidity-metrics",
        "tintinweb.graphviz-interactive-preview",
        "streetsidesoftware.code-spell-checker",
        "trailofbits.weaudit",
        "tintinweb.vscode-ethover",
        "tintinweb.vscode-inline-bookmarks",
        "tintinweb.vscode-vyper",
        "starkware.cairo1",
        "starkware.cairo",
        "RuntimeVerification.simbolik",
        "eamodio.gitlens",
        "gimenete.github-linker",
        "tkrkt.linenote",
        "ackeeblockchain.tools-for-solidity",
        "be5invis.toml"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": { "bash": { "path": "/usr/bin/bash" } },
        "docker.memory": "6g"
      }
    }
  },


// Use 'forwardPorts' to make a list of ports inside the container available locally.
// "forwardPorts": [3000],

// Use 'portsAttributes' to set default properties for specific forwarded ports. 
// More info: https://containers.dev/implementors/json_reference/#port-attributes
// "portsAttributes": {
// 	"3000": {
// 		"label": "Hello Remote World",
// 		"onAutoForward": "notify"
// 	}
// },

// Use 'postCreateCommand' to run commands after the container is created.
// We're using a gist, but you can also reference the raw install-tool from your repo.
// Unless you mount the scripts folder as
  "postCreateCommand": "echo Welcome to auditor-toolbox. Learn more about it in: https://github.com/Deivitto/auditor-docker"

// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
// "remoteUser": "root"
}
